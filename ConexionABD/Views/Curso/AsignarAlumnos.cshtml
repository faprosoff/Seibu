@model GestionDeSeibu.Models.Curso

@{
	ViewBag.Title = "Asignar alumnos a Curso";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

<div class="form-horizontal">
	<hr />
	@Html.HiddenFor(m => m.IdCurso, new { @id = "idCurso" })


	@foreach (var alumno in ViewBag.data)
	{
		<div class="form-group">
			<label class="control-label col-md-2">@alumno.Nombre @alumno.Apellido</label>
			<div class="col-md-10">
				 <input type="checkbox" name="asistencia[]" value="@alumno.Id" />
			</div>
		</div>

	}


	<div class="form-group">
		<div class="col-md-offset-2 col-md-10">
			<input type="submit" value="Guardar" class="btn btn-default" />
		</div>
	</div>
</div>
}

<div>
	@Html.ActionLink("Cancelar", "ListarCursos")
</div>
