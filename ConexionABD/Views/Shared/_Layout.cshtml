<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Asociación Japonesa Seibu</title>
    <link href="~/Content/Images/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <link href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
	<div class="navbar navbar-inverse navbar-fixed-top">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				@Html.ActionLink("SEIBU", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
			</div>
			<div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="true">Alumnos</a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Crear Alumno", "CrearAlumno", "Alumno")</li>
                            <li>@Html.ActionLink("Listar Alumnos", "ListarAlumnos", "Alumno")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="true">Profesores</a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Crear Profesor", "CrearProfesor", "Profesor")</li>
                            <li>@Html.ActionLink("Listar Profesores", "ListarProfesores", "Profesor")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="true">Cursos</a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Crear Curso", "CrearCurso", "Curso")</li>
                            <li>@Html.ActionLink("Listar Cursos", "ListarCursos", "Curso")</li>
                            <li>@Html.ActionLink("Asignar Alumno a Curso", "AsignarAlumnosNew", "Curso")</li>
                        </ul>
                    </li>
                </ul>
			</div>
		</div>
	</div>

	<div class="container body-content">
		@RenderBody()
		<hr />
		<footer>
            <p>© 2018 - Asociación Japonesa Seibu 西部</p>
		</footer>
	</div>

	@Scripts.Render("~/bundles/jquery")
	<script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>

	@Scripts.Render("~/bundles/bootstrap")
	@RenderSection("scripts", required: false)

</body>
</html>